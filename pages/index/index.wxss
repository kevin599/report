body,html{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}
.bg {
  background-color: #f6f6f7;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

.container {
  width: 93%;
  height: 80%;
  margin: 1rem;
  background-color: #fdfffc;
  margin: 1rem auto 0 auto;
  box-shadow: 1px 1px 1px 1px #e9e9e9;
}

.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center
}

.time {
  color: #cc0e0c;
  text-align: center;
  font-size: 30px;
  margin: 13px auto;
}

.read {
  color: #000086;
  font-size: 20px;
  text-align: center;
}

.read span {
  font-size: 2.5rem;
}

.img {
  display: block;
  width: 6rem;
  height: 8rem;
  background-color: teal;
  margin: 2rem auto 1rem auto;
}

.icon {
  width: 8rem;
  height: 8rem;
  /* background-color: turquoise; */
  position: absolute;
  /* border-radius: 50%; */
  right: 15%;
  top: 25%;
  transform-origin: 100% 0;
  animation: scale 1s infinite alternate linear;
}

@keyframes scale {
  0% {
    transform: scale(0.9);
  }

  /* 20% {
    transform: scale(1.2);
  } */

  33% {
    transform: scale(1.2);
  }

  66% {
    transform: scale(1.4);
  }

  100% {
    transform: scale(1.6);
  }
}

form {
  margin: 0 auto;
}

.item {
  margin: 0.5rem 2rem 0.5rem 2rem;
  font-size: 18px;
}

.btBox {
  display: flex;
  flex-wrap: nowrap;
  /* flex-shrink: 0.8; */
  justify-content: space-evenly;

}

.bt {
  padding: 0.5rem;
  color: white;
  font-size: 14px;
  margin: 1rem 0.5rem;
  /* width: 50px; */
  height: 30px;
  text-align: center;
  line-height: 30px;
  border-radius: 3%;
}

.bt1 {
  background-color: #ec0d21;
  flex-grow: 1.5;
}

.bt2 {
  background-color: #1888f4;
  flex-grow: 2;
}

.bt3 {
  background-color: #fd966f;
  flex-grow: 1;
}

.bt4 {
  flex-grow: 1;
  background-color: #06c05a;
}

.time1{
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
  /* border: 1px solid black; */
}